@model IEnumerable<Sattim.Web.Models.UI.EmailTemplate>
@using Sattim.Web.Models.UI
@{
    ViewData["Title"] = "E-posta Şablon Yönetimi";
}

<style>
    /* Page Intro */
    .page-intro {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Page Header */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }

    .page-header-info h2 {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0 0 0.25rem 0;
    }

    .page-header-info p {
        color: #666;
        font-size: 0.85rem;
        margin: 0;
    }

    /* Action Button */
    .btn-primary {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.75rem 1.25rem;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    /* Templates Table Card */
    .templates-table-card {
        background: white;
        border: 1px solid #e5e5e5;
    }

    .templates-table-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .templates-table-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
    }

    .templates-count {
        font-size: 0.85rem;
        color: #666;
        background-color: #f5f5f5;
        padding: 0.35rem 0.75rem;
        font-weight: 500;
    }

    /* Table Styling */
    .templates-table {
        width: 100%;
        font-size: 0.85rem;
    }

        .templates-table thead th {
            padding: 1rem 1rem;
            background-color: #fafafa;
            border-bottom: 2px solid #e5e5e5;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            white-space: nowrap;
        }

        .templates-table tbody td {
            padding: 1rem 1rem;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }

        .templates-table tbody tr:hover {
            background-color: #fafafa;
        }

        .templates-table tbody tr:last-child td {
            border-bottom: none;
        }

    /* Template Name Link */
    .template-name-link {
        color: #1a1a1a;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s;
    }

        .template-name-link:hover {
            color: #666;
        }

    /* Type Badge */
    .type-badge {
        background-color: #dbeafe;
        color: #1e40af;
        padding: 0.3rem 0.65rem;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        display: inline-block;
    }

    /* Status Badges */
    .status-badge {
        padding: 0.3rem 0.65rem;
        font-size: 0.7rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        display: inline-block;
    }

    .status-active {
        background-color: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background-color: #f3f4f6;
        color: #6b7280;
    }

    /* Subject Column */
    .subject-text {
        color: #666;
        font-size: 0.8rem;
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .action-btn {
        padding: 0.4rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        white-space: nowrap;
        text-decoration: none;
    }

    .btn-info {
        background-color: #0284c7;
        border-color: #0284c7;
        color: white;
    }

        .btn-info:hover {
            background-color: #0369a1;
            border-color: #0369a1;
            color: white;
        }

    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        color: white;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            border-color: #b91c1c;
            color: white;
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #999;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

    .empty-state-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
    }

    .empty-state-text {
        font-size: 0.9rem;
        color: #999;
        margin-bottom: 1.5rem;
    }

    /* Warning Box */
    .warning-box {
        background-color: #fef3c7;
        border-left: 3px solid #f59e0b;
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: start;
        gap: 1rem;
    }

        .warning-box i {
            color: #92400e;
            font-size: 1.25rem;
            margin-top: 0.1rem;
        }

    .warning-box-content {
        flex: 1;
    }

    .warning-box-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: #92400e;
        margin: 0 0 0.25rem 0;
    }

    .warning-box-text {
        font-size: 0.85rem;
        color: #92400e;
        margin: 0;
        line-height: 1.5;
    }

    
</style>

<!-- Page Header -->
<div class="page-header">
    <div class="page-header-info">
        <h2>E-posta Şablon Yönetimi</h2>
        <p>Sistemde kullanılan tüm e-posta şablonlarını yönetin</p>
    </div>
    <a asp-action="CreateEmailTemplate" class="btn-primary">
        <i class="fas fa-plus"></i>
        Yeni Şablon Ekle
    </a>
</div>

<!-- Warning Box -->
<div class="warning-box">
    <i class="fas fa-exclamation-triangle"></i>
    <div class="warning-box-content">
        <div class="warning-box-title">Dikkat!</div>
        <p class="warning-box-text">
            E-posta şablonları sistem işleyişi için kritik öneme sahiptir. Bir şablonu silmeden veya devre dışı bırakmadan önce,
            sistemin hangi durumlarda bu şablonu kullandığından emin olun.
        </p>
    </div>
</div>

<!-- Templates Table -->
<div class="templates-table-card">
    <div class="templates-table-header">
        <h3 class="templates-table-title">Tüm Şablonlar</h3>
        <span class="templates-count">@Model.Count() şablon</span>
    </div>

    <div class="templates-table-wrapper">
        @if (Model != null && Model.Any())
        {
            <table class="templates-table">
                <thead>
                    <tr>
                        <th>Şablon Adı</th>
                        <th>Tipi</th>
                        <th>Konu</th>
                        <th>Durum</th>
                        <th style="width: 150px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var template in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="EditEmailTemplate"
                                   asp-route-id="@template.Id"
                                   class="template-name-link">
                                    @template.Name
                                </a>
                            </td>
                            <td>
                                <span class="type-badge">@template.Type.ToString()</span>
                            </td>
                            <td>
                                <div class="subject-text" title="@template.Subject">
                                    @template.Subject
                                </div>
                            </td>
                            <td>
                                @if (template.IsActive)
                                {
                                    <span class="status-badge status-active">Aktif</span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">Pasif</span>
                                }
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a asp-action="EditEmailTemplate"
                                       asp-route-id="@template.Id"
                                       class="action-btn btn-info"
                                       title="Düzenle">
                                        <i class="fas fa-edit"></i>
                                        <span class="d-none d-lg-inline">Düzenle</span>
                                    </a>
                                    <form asp-action="DeleteEmailTemplate"
                                          asp-route-id="@template.Id"
                                          method="post"
                                          style="margin: 0;"
                                          onsubmit="return confirm('Bu şablonu silmek istediğinizden emin misiniz?\n\nUYARI: Bu işlem sistemsel hatalara yol açabilir!');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="action-btn btn-danger"
                                                title="Sil">
                                            <i class="fas fa-trash"></i>
                                            <span class="d-none d-lg-inline">Sil</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-envelope"></i>
                <div class="empty-state-title">Şablon Bulunamadı</div>
                <div class="empty-state-text">
                    Henüz hiç e-posta şablonu eklenmemiş. Hemen bir tane ekleyerek başlayın.
                </div>
                <a asp-action="CreateEmailTemplate" class="btn-primary">
                    <i class="fas fa-plus"></i>
                    İlk Şablonu Ekle
                </a>
            </div>
        }
    </div>
</div>
@model IEnumerable<Sattim.Web.Models.UI.Banner>
@using Sattim.Web.Models.UI
@{
    ViewData["Title"] = "Banner Yönetimi";
}

<style>
    /* Page Intro */
    .page-intro {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Banner Card */
    .banner-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 2rem;
    }

    .banner-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .banner-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
    }

    /* Action Buttons */
    .action-btn {
        padding: 0.4rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        white-space: nowrap;
        margin-right: 0.25rem;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
        color: white;
        padding: 0.6rem 1.25rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .btn-info {
        background-color: #0284c7;
        border-color: #0284c7;
        color: white;
    }

        .btn-info:hover {
            background-color: #0369a1;
            border-color: #0369a1;
            color: white;
        }

    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        color: white;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            border-color: #b91c1c;
            color: white;
        }

    /* Banner Table */
    .banner-table {
        width: 100%;
        font-size: 0.85rem;
    }

        .banner-table thead th {
            padding: 1rem 1rem;
            background-color: #fafafa;
            border-bottom: 2px solid #e5e5e5;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            white-space: nowrap;
        }

        .banner-table tbody td {
            padding: 1rem 1rem;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }

        .banner-table tbody tr:hover {
            background-color: #fafafa;
        }

    /* Banner Image */
    .banner-thumbnail {
        max-width: 150px;
        height: auto;
        border: 1px solid #e5e5e5;
        display: block;
    }

    /* Banner Title Link */
    .banner-title-link {
        color: #1a1a1a;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

        .banner-title-link:hover {
            color: #666;
        }

    .banner-link-info {
        color: #999;
        font-size: 0.75rem;
        margin-top: 0.25rem;
        display: block;
        word-break: break-all;
    }

    /* Status Badges */
    .status-badge {
        padding: 0.35rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        display: inline-block;
    }

    .status-active {
        background-color: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background-color: #f3f4f6;
        color: #6b7280;
    }

    /* Position Badge */
    .position-badge {
        background-color: #f3f4f6;
        color: #374151;
        padding: 0.35rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        display: inline-block;
    }

    /* Display Order */
    .order-number {
        font-weight: 600;
        color: #666;
        font-size: 0.9rem;
    }

    /* Date Display */
    .date-range {
        color: #666;
        font-size: 0.8rem;
        white-space: nowrap;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #999;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

    .empty-state-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
    }
</style>

<!-- Page Intro -->
<p class="page-intro">
    Anasayfa ve diğer sayfalarda görüntülenecek banner'ları yönetin. Banner pozisyonları, sıralama ve geçerlilik tarihlerini düzenleyebilirsiniz.
</p>

<!-- Page Header -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
        <h2 style="font-size: 1.25rem; font-weight: 600; color: #1a1a1a; margin: 0;">Tüm Banner'lar</h2>
        <p style="color: #666; font-size: 0.85rem; margin: 0.25rem 0 0 0;">
            Sistemde kayıtlı @Model.Count() banner bulunmaktadır.
        </p>
    </div>
    <a asp-action="CreateBanner" class="btn-primary">
        <i class="fas fa-plus"></i>Yeni Banner Ekle
    </a>
</div>

<!-- Banner Table -->
<div class="banner-card">
    <div class="banner-card-header">
        <h3 class="banner-card-title">Banner Listesi</h3>
        <span style="font-size: 0.85rem; color: #666;">Sıralama: Görüntüleme Sırasına Göre</span>
    </div>

    <div style="overflow-x: auto;">
        @if (Model != null && Model.Any())
        {
            <table class="banner-table">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Başlık & Link</th>
                        <th>Pozisyon</th>
                        <th>Geçerlilik</th>
                        <th>Sıra</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var banner in Model.OrderBy(b => b.DisplayOrder))
                    {
                        <tr>
                            <td>
                                <img src="@banner.ImageUrl"
                                     alt="@banner.Title"
                                     class="banner-thumbnail" />
                            </td>
                            <td>
                                <a asp-action="EditBanner"
                                   asp-route-id="@banner.Id"
                                   class="banner-title-link">
                                    @banner.Title
                                </a>
                                @if (!string.IsNullOrEmpty(banner.LinkUrl))
                                {
                                    <small class="banner-link-info">
                                        <i class="fas fa-link" style="font-size: 0.7rem; margin-right: 0.25rem;"></i>
                                        @banner.LinkUrl
                                    </small>
                                }
                            </td>
                            <td>
                                <span class="position-badge">@banner.Position.ToString()</span>
                            </td>
                            <td>
                                <div class="date-range">
                                    <div>@banner.StartDate.ToString("dd.MM.yyyy")</div>
                                    <div style="color: #999; font-size: 0.7rem;">↓</div>
                                    <div>@banner.EndDate.ToString("dd.MM.yyyy")</div>
                                </div>
                            </td>
                            <td>
                                <span class="order-number">#@banner.DisplayOrder</span>
                            </td>
                            <td>
                                @if (banner.IsActive)
                                {
                                    <span class="status-badge status-active">Aktif</span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">Pasif</span>
                                }
                            </td>
                            <td style="white-space: nowrap;">
                                <a asp-action="EditBanner"
                                   asp-route-id="@banner.Id"
                                   class="action-btn btn-info"
                                   title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteBanner"
                                      asp-route-id="@banner.Id"
                                      method="post"
                                      style="display: inline;"
                                      onsubmit="return confirm('Bu banner kaydını silmek istediğinizden emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="action-btn btn-danger"
                                            title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-images"></i>
                <div class="empty-state-title">Banner Bulunamadı</div>
                <div>Henüz hiç banner eklenmemiş. Yeni banner eklemek için yukarıdaki butonu kullanın.</div>
            </div>
        }
    </div>
</div>
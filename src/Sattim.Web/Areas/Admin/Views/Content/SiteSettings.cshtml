@model List<Sattim.Web.ViewModels.Content.SiteSettingGroupViewModel>
@using Sattim.Web.Models.UI
@{
    ViewData["Title"] = "Site Ayarları";
}

<style>
    /* Page Intro */
    .page-intro {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Warning Box */
    .warning-box {
        background-color: #fef3c7;
        border-left: 3px solid #f59e0b;
        padding: 1rem 1.25rem;
        margin-bottom: 2rem;
        display: flex;
        align-items: start;
        gap: 1rem;
    }

        .warning-box i {
            color: #92400e;
            font-size: 1.25rem;
            margin-top: 0.1rem;
        }

    .warning-box-content {
        flex: 1;
    }

    .warning-box-title {
        font-size: 0.9rem;
        font-weight: 600;
        color: #92400e;
        margin: 0 0 0.25rem 0;
    }

    .warning-box-text {
        font-size: 0.85rem;
        color: #92400e;
        margin: 0;
        line-height: 1.5;
    }

    /* Settings Card */
    .settings-card {
        background: white;
        border: 1px solid #e5e5e5;
    }

    /* Tabs */
    .settings-tabs {
        display: flex;
        border-bottom: 2px solid #e5e5e5;
        background-color: #fafafa;
        overflow-x: auto;
        scrollbar-width: thin;
    }

        .settings-tabs::-webkit-scrollbar {
            height: 4px;
        }

        .settings-tabs::-webkit-scrollbar-track {
            background: #f5f5f5;
        }

        .settings-tabs::-webkit-scrollbar-thumb {
            background: #ccc;
        }

    .tab-item {
        padding: 1rem 1.5rem;
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.2s;
        border-bottom: 3px solid transparent;
        white-space: nowrap;
        text-decoration: none;
        background: none;
        border-top: none;
        border-left: none;
        border-right: none;
    }

        .tab-item:hover {
            color: #1a1a1a;
            background-color: #f5f5f5;
        }

        .tab-item.active {
            color: #1a1a1a;
            border-bottom-color: #1a1a1a;
            background-color: white;
        }

    /* Tab Content */
    .tab-content {
        display: none;
    }

        .tab-content.active {
            display: block;
        }

    .tab-pane {
        padding: 2rem 1.5rem;
    }

    /* Setting Row */
    .setting-row {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 2rem;
        padding: 1.5rem 0;
        border-bottom: 1px solid #f0f0f0;
        align-items: start;
    }

        .setting-row:last-child {
            border-bottom: none;
        }

    .setting-label-wrapper {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .setting-label {
        font-size: 0.9rem;
        font-weight: 600;
        color: #1a1a1a;
        line-height: 1.4;
    }

    .setting-key {
        font-size: 0.75rem;
        color: #999;
        font-family: 'Courier New', Courier, monospace;
        background-color: #f5f5f5;
        padding: 0.25rem 0.5rem;
        display: inline-block;
        word-break: break-all;
    }

    .setting-input-wrapper {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    /* Form Controls */
    .form-control {
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
        color: #1a1a1a;
        background-color: white;
        transition: all 0.2s;
        width: 100%;
    }

        .form-control:focus {
            border-color: #1a1a1a;
            box-shadow: none;
            outline: none;
        }

        .form-control::placeholder {
            color: #999;
        }

    /* Password Field */
    .password-field {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: #666;
        cursor: pointer;
        padding: 0.5rem;
        font-size: 0.9rem;
    }

        .password-toggle:hover {
            color: #1a1a1a;
        }

    /* Save Button Card */
    .save-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-top: 2rem;
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        bottom: 0;
        z-index: 100;
        box-shadow: 0 -2px 8px rgba(0,0,0,0.05);
    }

    .save-card-info {
        color: #666;
        font-size: 0.85rem;
    }

        .save-card-info i {
            color: #0284c7;
            margin-right: 0.5rem;
        }

    /* Buttons */
    .btn-primary {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.75rem 2rem;
        font-size: 0.9rem;
        font-weight: 600;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,0,0,0.15);
        }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #999;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

    .empty-state-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
    }

</style>

<!-- Page Intro -->
<p class="page-intro">
    Sisteminizin genel ayarlarını buradan yönetin. Değişiklikler anında aktif olacaktır.
</p>

<!-- Warning Box -->
<div class="warning-box">
    <i class="fas fa-exclamation-triangle"></i>
    <div class="warning-box-content">
        <div class="warning-box-title">Dikkat!</div>
        <p class="warning-box-text">
            Bu ayarlar sistemin çalışmasını doğrudan etkiler. Bir değeri değiştirmeden önce ne yaptığınızdan emin olun.
            Yanlış yapılandırma, site işlevselliğini bozabilir.
        </p>
    </div>
</div>

<form asp-action="SiteSettings" method="post">
    @Html.AntiForgeryToken()

    <!-- Settings Card -->
    <div class="settings-card">
        <!-- Tabs -->
        <div class="settings-tabs" role="tablist">
            @for (int i = 0; i < Model.Count; i++)
            {
                var group = Model[i];
                var tabId = $"tab-{group.Category.ToString()}";
                var isActive = (i == 0) ? "active" : "";

                <button type="button"
                        class="tab-item @isActive"
                        data-tab="@tabId"
                        onclick="switchTab(event, '@tabId')">
                    @group.Category.ToString()
                </button>

                <input type="hidden" asp-for="@Model[i].Category" />
            }
        </div>

        <!-- Tab Content -->
        @for (int i = 0; i < Model.Count; i++)
        {
            var group = Model[i];
            var tabId = $"tab-{group.Category.ToString()}";
            var isActive = (i == 0) ? "active" : "";

            <div class="tab-content @isActive" id="@tabId">
                <div class="tab-pane">
                    @if (group.Settings != null && group.Settings.Any())
                    {
                        @for (int j = 0; j < group.Settings.Count; j++)
                        {
                            <input type="hidden" asp-for="@Model[i].Settings[j].Key" />
                            <input type="hidden" asp-for="@Model[i].Settings[j].Description" />

                            <div class="setting-row">
                                <div class="setting-label-wrapper">
                                    <label class="setting-label">
                                        @group.Settings[j].Description
                                    </label>
                                    <span class="setting-key">@group.Settings[j].Key</span>
                                </div>

                                <div class="setting-input-wrapper">
                                    @if (group.Settings[j].Key.Contains("Password") || group.Settings[j].Key.Contains("Secret"))
                                    {
                                        <div class="password-field">
                                            <input type="password"
                                                   asp-for="@Model[i].Settings[j].Value"
                                                   class="form-control"
                                                   id="password-@i-@j"
                                                   placeholder="••••••••" />
                                            <button type="button"
                                                    class="password-toggle"
                                                    onclick="togglePassword('password-@i-@j', this)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    }
                                    else
                                    {
                                        <input type="text"
                                               asp-for="@Model[i].Settings[j].Value"
                                               class="form-control"
                                               placeholder="Değer girin..." />
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-cog"></i>
                            <div class="empty-state-title">Ayar Bulunamadı</div>
                            <div>Bu kategoride henüz ayar bulunmamaktadır.</div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Save Card -->
    <div class="save-card">
        <div class="save-card-info">
            <i class="fas fa-info-circle"></i>
            Değişiklikler kaydedildikten sonra anında aktif olacaktır
        </div>
        <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i>
            Tüm Ayarları Kaydet
        </button>
    </div>
</form>

@section Scripts {
    <script>
        // Tab Switching
        function switchTab(event, tabId) {
            // Remove active from all tabs and content
            document.querySelectorAll('.tab-item').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });

            // Add active to clicked tab and its content
            event.currentTarget.classList.add('active');
            document.getElementById(tabId).classList.add('active');
        }

        // Password Toggle
        function togglePassword(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Form change detection
        let formChanged = false;
        document.querySelectorAll('input[type="text"], input[type="password"]').forEach(input => {
            input.addEventListener('input', () => {
                formChanged = true;
            });
        });

        // Warn on page leave
        window.addEventListener('beforeunload', (e) => {
            if (formChanged) {
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // Reset on submit
        document.querySelector('form').addEventListener('submit', () => {
            formChanged = false;
        });
    </script>
}
@model Sattim.Web.ViewModels.Content.BannerFormViewModel
@using Sattim.Web.Models.UI
@{
    ViewData["Title"] = "Yeni Banner Ekle";
}

<style>
    /* Page Intro */
    .page-intro {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Form Card */
    .form-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 2rem;
    }

    .form-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        background-color: #fafafa;
    }

    .form-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
    }

    .form-card-body {
        padding: 2rem 1.5rem;
    }

    /* Form Groups */
    .form-row {
        display: flex;
        margin-bottom: 1.5rem;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.3px;
    }

    .form-label-inline {
        min-width: 180px;
        padding-top: 0.6rem;
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.3px;
    }

    .form-field {
        flex: 1;
    }

    .form-field-half {
        flex: 0 0 calc(50% - 0.75rem);
    }

    /* Form Controls */
    .form-input,
    .form-select {
        width: 100%;
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.6rem 1rem;
        font-size: 0.85rem;
        background-color: white;
        transition: border-color 0.2s;
    }

        .form-input:focus,
        .form-select:focus {
            border-color: #1a1a1a;
            outline: none;
            box-shadow: none;
        }

        .form-input::placeholder {
            color: #999;
            font-size: 0.8rem;
        }

    /* Validation */
    .text-danger {
        color: #dc2626;
        font-size: 0.75rem;
        margin-top: 0.35rem;
        display: block;
    }

    .validation-summary {
        background-color: #fef2f2;
        border-left: 3px solid #dc2626;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        color: #991b1b;
        font-size: 0.85rem;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 1.25rem;
        }

        .validation-summary li {
            margin-bottom: 0.25rem;
        }

    /* Checkbox */
    .form-checkbox-group {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.6rem 0;
    }

    .form-checkbox {
        width: 18px;
        height: 18px;
        border: 1px solid #e5e5e5;
        cursor: pointer;
    }

        .form-checkbox:focus {
            outline: 2px solid #1a1a1a;
            outline-offset: 2px;
        }

    .form-checkbox-label {
        font-size: 0.85rem;
        color: #666;
        cursor: pointer;
        user-select: none;
    }

    /* Form Help Text */
    .form-help {
        font-size: 0.75rem;
        color: #999;
        margin-top: 0.35rem;
        display: block;
    }

    /* Buttons */
    .btn-primary {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.6rem 1.5rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .btn-secondary {
        background-color: #6b7280;
        border: 1px solid #6b7280;
        color: white;
        padding: 0.6rem 1.5rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-secondary:hover {
            background-color: #9ca3af;
            border-color: #9ca3af;
            color: white;
        }

    .form-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e5e5;
    }
</style>

<!-- Page Intro -->
<p class="page-intro">
    Yeni bir banner oluşturun. Banner'lar anasayfa ve diğer sayfalarda belirlenen pozisyonlarda görüntülenecektir.
</p>

<!-- Form Card -->
<div class="form-card">
    <div class="form-card-header">
        <h3 class="form-card-title">
            <i class="fas fa-image me-2"></i>Banner Bilgileri
        </h3>
    </div>
    <div class="form-card-body">
        <form asp-action="CreateBanner" method="post">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            }

            <!-- Title -->
            <div class="form-row">
                <label class="form-label-inline">
                    Başlık<span style="color: #dc2626; margin-left: 0.25rem;">*</span>
                </label>
                <div class="form-field">
                    <input asp-for="Title" class="form-input" placeholder="Banner başlığını girin" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <small class="form-help">Banner'ı tanımlayıcı bir başlık (yönetim panelinde görünür)</small>
                </div>
            </div>

            <!-- Position -->
            <div class="form-row">
                <label class="form-label-inline">
                    Pozisyon<span style="color: #dc2626; margin-left: 0.25rem;">*</span>
                </label>
                <div class="form-field">
                    <select asp-for="Position"
                            asp-items="@Html.GetEnumSelectList<BannerPosition>()"
                            class="form-select">
                        <option value="">-- Pozisyon Seçin --</option>
                    </select>
                    <span asp-validation-for="Position" class="text-danger"></span>
                    <small class="form-help">Banner'ın görüntüleneceği sayfa konumu</small>
                </div>
            </div>

            <!-- Image URL -->
            <div class="form-row">
                <label class="form-label-inline">
                    Görsel URL<span style="color: #dc2626; margin-left: 0.25rem;">*</span>
                </label>
                <div class="form-field">
                    <input asp-for="ImageUrl" class="form-input" placeholder="https://example.com/banner.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="form-help">Banner görselinin tam URL adresi (HTTPS önerilir)</small>
                </div>
            </div>

            <!-- Link URL -->
            <div class="form-row">
                <label class="form-label-inline">Link URL</label>
                <div class="form-field">
                    <input asp-for="LinkUrl" class="form-input" placeholder="/kategori/elektronik" />
                    <span asp-validation-for="LinkUrl" class="text-danger"></span>
                    <small class="form-help">Banner'a tıklandığında açılacak sayfa (opsiyonel)</small>
                </div>
            </div>

            <!-- Display Order & Dates Row -->
            <div class="form-row">
                <label class="form-label-inline">
                    Sıra & Tarihler<span style="color: #dc2626; margin-left: 0.25rem;">*</span>
                </label>
                <div style="flex: 1; display: flex; flex-direction: column; gap: 1rem;">
                    <!-- Display Order -->
                    <div>
                        <label class="form-label">Görüntüleme Sırası</label>
                        <input asp-for="DisplayOrder" type="number" class="form-input" style="max-width: 150px;" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        <small class="form-help">Küçük sayılar önce görüntülenir</small>
                    </div>

                    <!-- Date Range -->
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div>
                            <label class="form-label">Başlangıç Tarihi</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-input" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div>
                            <label class="form-label">Bitiş Tarihi</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-input" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Is Active -->
            <div class="form-row">
                <label class="form-label-inline">Durum</label>
                <div class="form-field">
                    <div class="form-checkbox-group">
                        <input class="form-checkbox" type="checkbox" asp-for="IsActive" id="isActive">
                        <label class="form-checkbox-label" for="isActive">
                            Banner'ı yayında olarak işaretle
                        </label>
                    </div>
                    <small class="form-help">Pasif banner'lar sitede görüntülenmez</small>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i>Banner'ı Kaydet
                </button>
                <a asp-action="Banners" class="btn-secondary">
                    <i class="fas fa-times"></i>İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model Sattim.Web.ViewModels.Content.CategoryFormViewModel
@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<style>
    /* Page Intro */
    .page-intro {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* Form Card */
    .form-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 2rem;
    }

    .form-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        background-color: #fafafa;
    }

    .form-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
    }

    .form-card-body {
        padding: 2rem 1.5rem;
    }

    /* Form Groups */
    .form-row {
        display: flex;
        margin-bottom: 1.5rem;
        gap: 1.5rem;
        align-items: flex-start;
    }

    .form-label-inline {
        min-width: 180px;
        padding-top: 0.6rem;
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.3px;
    }

    .form-field {
        flex: 1;
    }

    /* Form Controls */
    .form-input,
    .form-select,
    .form-textarea {
        width: 100%;
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.6rem 1rem;
        font-size: 0.85rem;
        background-color: white;
        transition: border-color 0.2s;
    }

    .form-textarea {
        resize: vertical;
        line-height: 1.6;
    }

        .form-input:focus,
        .form-select:focus,
        .form-textarea:focus {
            border-color: #1a1a1a;
            outline: none;
            box-shadow: none;
        }

        .form-input::placeholder,
        .form-textarea::placeholder {
            color: #999;
            font-size: 0.8rem;
        }

    /* Validation */
    .text-danger {
        color: #dc2626;
        font-size: 0.75rem;
        margin-top: 0.35rem;
        display: block;
    }

    .validation-summary {
        background-color: #fef2f2;
        border-left: 3px solid #dc2626;
        padding: 1rem 1.25rem;
        margin-bottom: 1.5rem;
        color: #991b1b;
        font-size: 0.85rem;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 1.25rem;
        }

        .validation-summary li {
            margin-bottom: 0.25rem;
        }

    /* Checkbox */
    .form-checkbox-group {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.6rem 0;
    }

    .form-checkbox {
        width: 18px;
        height: 18px;
        border: 1px solid #e5e5e5;
        cursor: pointer;
    }

        .form-checkbox:focus {
            outline: 2px solid #1a1a1a;
            outline-offset: 2px;
        }

    .form-checkbox-label {
        font-size: 0.85rem;
        color: #666;
        cursor: pointer;
        user-select: none;
    }

    /* Form Help Text */
    .form-help {
        font-size: 0.75rem;
        color: #999;
        margin-top: 0.35rem;
        display: block;
    }

    /* Buttons */
    .btn-primary {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.6rem 1.5rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-primary:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .btn-secondary {
        background-color: #6b7280;
        border: 1px solid #6b7280;
        color: white;
        padding: 0.6rem 1.5rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-secondary:hover {
            background-color: #9ca3af;
            border-color: #9ca3af;
            color: white;
        }

    .form-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #e5e5e5;
    }
</style>

<!-- Page Intro -->
<p class="page-intro">
    Yeni bir kategori oluşturun. Ana kategori veya alt kategori olarak ekleyebilirsiniz.
</p>

<!-- Form Card -->
<div class="form-card">
    <div class="form-card-header">
        <h3 class="form-card-title">
            <i class="fas fa-folder-plus me-2"></i>Kategori Bilgileri
        </h3>
    </div>
    <div class="form-card-body">
        <form asp-action="CreateCategory" method="post">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
            }

            <!-- Name -->
            <div class="form-row">
                <label class="form-label-inline">
                    Kategori Adı<span style="color: #dc2626; margin-left: 0.25rem;">*</span>
                </label>
                <div class="form-field">
                    <input asp-for="Name" class="form-input" placeholder="Kategori adını girin" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <small class="form-help">Kategoriyi tanımlayıcı açık bir isim kullanın</small>
                </div>
            </div>

            <!-- Slug -->
            <div class="form-row">
                <label class="form-label-inline">
                    Slug (URL)
                </label>
                <div class="form-field">
                    <input asp-for="Slug" class="form-input" placeholder="kategori-adi" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                    <small class="form-help">URL'de kullanılacak benzersiz tanımlayıcı. Boş bırakılırsa otomatik oluşturulur.</small>
                </div>
            </div>

            <!-- Parent Category -->
            <div class="form-row">
                <label class="form-label-inline">
                    Ana Kategori
                </label>
                <div class="form-field">
                    <select asp-for="ParentCategoryId"
                            asp-items="(SelectList)ViewBag.CategoryList"
                            class="form-select">
                        <option value="">-- Ana Kategori (Yok) --</option>
                    </select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                    <small class="form-help">Alt kategori oluşturmak için ana kategori seçin. Seçilmezse üst düzey kategori olur.</small>
                </div>
            </div>

            <!-- Description -->
            <div class="form-row">
                <label class="form-label-inline">
                    Açıklama
                </label>
                <div class="form-field">
                    <textarea asp-for="Description"
                              class="form-textarea"
                              rows="4"
                              placeholder="Kategori hakkında açıklayıcı bilgi girin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <small class="form-help">SEO için faydalıdır. Kategori sayfasında görüntülenebilir.</small>
                </div>
            </div>

            <!-- Image URL -->
            <div class="form-row">
                <label class="form-label-inline">
                    Resim URL
                </label>
                <div class="form-field">
                    <input asp-for="ImageUrl"
                           class="form-input"
                           placeholder="https://example.com/category-image.jpg" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="form-help">Kategori görseli URL'si (opsiyonel)</small>
                </div>
            </div>

            <!-- Is Active -->
            <div class="form-row">
                <label class="form-label-inline">Durum</label>
                <div class="form-field">
                    <div class="form-checkbox-group">
                        <input class="form-checkbox" type="checkbox" asp-for="IsActive" id="isActive" checked>
                        <label class="form-checkbox-label" for="isActive">
                            Kategoriyi aktif olarak işaretle (sitede görünsün)
                        </label>
                    </div>
                    <small class="form-help">Pasif kategoriler sitede görüntülenmez</small>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="form-actions">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i>Kategoriyi Kaydet
                </button>
                <a asp-action="Categories" class="btn-secondary">
                    <i class="fas fa-times"></i>İptal
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Slug otomatik oluşturma
        document.querySelector('input[name="Name"]')?.addEventListener('blur', function() {
            const slugInput = document.querySelector('input[name="Slug"]');
            if (!slugInput.value) {
                const slug = this.value
                    .toLowerCase()
                    .replace(/ğ/g, 'g')
                    .replace(/ü/g, 'u')
                    .replace(/ş/g, 's')
                    .replace(/ı/g, 'i')
                    .replace(/ö/g, 'o')
                    .replace(/ç/g, 'c')
                    .replace(/[^a-z0-9]+/g, '-')
                    .replace(/^-+|-+$/g, '');
                slugInput.value = slug;
            }
        });
    </script>
}
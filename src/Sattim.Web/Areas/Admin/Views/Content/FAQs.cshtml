@model IEnumerable<Sattim.Web.Models.UI.FAQ>
@using Sattim.Web.Models.UI
@{
    ViewData["Title"] = "Sıkça Sorulan Sorular (SSS) Yönetimi";
}

<style>
    /* Page Intro */
    .page-intro {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    /* FAQ Card */
    .faq-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 2rem;
    }

    .faq-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .faq-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
    }

    .faq-count {
        font-size: 0.85rem;
        color: #666;
        background-color: #f5f5f5;
        padding: 0.35rem 0.75rem;
        font-weight: 500;
    }

    /* Action Buttons */
    .action-btn {
        padding: 0.4rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        border: 1px solid;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.35rem;
        white-space: nowrap;
        margin-right: 0.25rem;
        text-decoration: none;
    }

    .btn-primary {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
        color: white;
        padding: 0.6rem 1.25rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

        .btn-primary:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .btn-info {
        background-color: #0284c7;
        border-color: #0284c7;
        color: white;
    }

        .btn-info:hover {
            background-color: #0369a1;
            border-color: #0369a1;
            color: white;
        }

    .btn-danger {
        background-color: #dc2626;
        border-color: #dc2626;
        color: white;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
            border-color: #b91c1c;
            color: white;
        }

    /* FAQ Table */
    .faq-table {
        width: 100%;
        font-size: 0.85rem;
    }

        .faq-table thead th {
            padding: 1rem 1rem;
            background-color: #fafafa;
            border-bottom: 2px solid #e5e5e5;
            font-weight: 600;
            color: #666;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.5px;
            white-space: nowrap;
        }

        .faq-table tbody td {
            padding: 1rem 1rem;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }

        .faq-table tbody tr:hover {
            background-color: #fafafa;
        }

    /* Order Number */
    .order-number {
        font-weight: 600;
        color: #666;
        font-size: 0.9rem;
        text-align: center;
        display: block;
    }

    /* Question Link */
    .question-link {
        color: #1a1a1a;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem;
        transition: color 0.2s;
        display: block;
    }

        .question-link:hover {
            color: #666;
        }

    /* Category Badge */
    .category-badge {
        background-color: #f3f4f6;
        color: #374151;
        padding: 0.35rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 500;
        text-transform: uppercase;
        display: inline-block;
    }

    /* Status Badges */
    .status-badge {
        padding: 0.35rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        display: inline-block;
    }

    .status-active {
        background-color: #dcfce7;
        color: #166534;
    }

    .status-inactive {
        background-color: #f3f4f6;
        color: #6b7280;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #999;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
        }

    .empty-state-title {
        font-size: 1.1rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
    }

    /* Stats Box */
    .stats-box {
        display: flex;
        gap: 1.5rem;
        padding: 1rem 1.5rem;
        background-color: #fafafa;
        border-bottom: 1px solid #e5e5e5;
        font-size: 0.8rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #666;
    }

        .stat-item i {
            font-size: 0.85rem;
            color: #999;
        }

        .stat-item strong {
            color: #1a1a1a;
            font-weight: 600;
        }
</style>

<!-- Page Intro -->
<p class="page-intro">
    Sıkça sorulan soruları yönetin. Kullanıcılarınızın sık karşılaştığı sorulara hızlı yanıtlar sağlayın.
</p>

<!-- Page Header -->
<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 2rem;">
    <div>
        <h2 style="font-size: 1.25rem; font-weight: 600; color: #1a1a1a; margin: 0;">SSS Yönetimi</h2>
        <p style="color: #666; font-size: 0.85rem; margin: 0.25rem 0 0 0;">
            Toplam @Model.Count() soru bulunmaktadır.
        </p>
    </div>
    <a asp-action="CreateFAQ" class="btn-primary">
        <i class="fas fa-plus"></i>Yeni SSS Ekle
    </a>
</div>

<!-- FAQ Table -->
<div class="faq-card">
    <div class="faq-card-header">
        <h3 class="faq-card-title">
            <i class="fas fa-question-circle me-2"></i>Tüm SSS'ler
        </h3>
        <span class="faq-count">@Model.Count() soru</span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="stats-box">
            <div class="stat-item">
                <i class="fas fa-check-circle" style="color: #22c55e;"></i>
                <span>Aktif: <strong>@Model.Count(f => f.IsActive)</strong></span>
            </div>
            <div class="stat-item">
                <i class="fas fa-times-circle" style="color: #dc2626;"></i>
                <span>Pasif: <strong>@Model.Count(f => !f.IsActive)</strong></span>
            </div>
            <div class="stat-item">
                <i class="fas fa-layer-group" style="color: #3b82f6;"></i>
                <span>Kategoriler: <strong>@Model.Select(f => f.Category).Distinct().Count()</strong></span>
            </div>
        </div>

        <div style="overflow-x: auto;">
            <table class="faq-table">
                <thead>
                    <tr>
                        <th style="width: 80px;">Sıra</th>
                        <th>Soru</th>
                        <th>Kategori</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var faq in Model.OrderBy(f => f.DisplayOrder))
                    {
                        <tr>
                            <td>
                                <span class="order-number">#@faq.DisplayOrder</span>
                            </td>
                            <td>
                                <a asp-action="EditFAQ"
                                   asp-route-id="@faq.Id"
                                   class="question-link">
                                    @faq.Question
                                </a>
                            </td>
                            <td>
                                <span class="category-badge">
                                    @faq.Category.ToString()
                                </span>
                            </td>
                            <td>
                                @if (faq.IsActive)
                                {
                                    <span class="status-badge status-active">Aktif</span>
                                }
                                else
                                {
                                    <span class="status-badge status-inactive">Pasif</span>
                                }
                            </td>
                            <td style="white-space: nowrap;">
                                <a asp-action="EditFAQ"
                                   asp-route-id="@faq.Id"
                                   class="action-btn btn-info"
                                   title="Düzenle">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <form asp-action="DeleteFAQ"
                                      asp-route-id="@faq.Id"
                                      method="post"
                                      style="display: inline;"
                                      onsubmit="return confirm('Bu SSS kaydını silmek istediğinizden emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit"
                                            class="action-btn btn-danger"
                                            title="Sil">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-question-circle"></i>
            <div class="empty-state-title">SSS Bulunamadı</div>
            <div>Henüz hiç soru-cevap eklenmemiş. Yeni SSS eklemek için yukarıdaki butonu kullanın.</div>
        </div>
    }
</div>
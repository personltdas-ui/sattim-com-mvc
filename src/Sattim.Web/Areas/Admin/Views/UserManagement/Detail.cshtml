@model Sattim.Web.ViewModels.Management.UserDetailViewModel
@{
    ViewData["Title"] = $"Kullanıcı Detayı: {Model.User.UserName}";
    
    bool isBanned = Model.User.LockoutEnd.HasValue && Model.User.LockoutEnd.Value > DateTimeOffset.UtcNow;
    bool isVerified = Model.Profile?.IsVerified ?? false;
    bool canVerify = Model.Profile != null && !isVerified;
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e5e5e5;
    }

    .page-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
    }

    .back-btn {
        background-color: transparent;
        border: 1px solid #e5e5e5;
        color: #666;
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .back-btn:hover {
        background-color: #f5f5f5;
        border-color: #d5d5d5;
        color: #1a1a1a;
    }

    /* Info Cards */
    .info-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 2rem;
    }

    .info-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
    }

    .info-card-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-card-body {
        padding: 0;
    }

    /* Info List */
    .info-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .info-list-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #f0f0f0;
    }

    .info-list-item:last-child {
        border-bottom: none;
    }

    .info-label {
        font-weight: 600;
        color: #666;
        font-size: 0.85rem;
    }

    .info-value {
        color: #1a1a1a;
        font-size: 0.9rem;
    }

    /* Status Badges */
    .status-badge {
        padding: 0.35rem 0.75rem;
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        display: inline-block;
    }

    .badge-success {
        background-color: #dcfce7;
        color: #166534;
    }

    .badge-warning {
        background-color: #fef3c7;
        color: #92400e;
    }

    .badge-secondary {
        background-color: #f3f4f6;
        color: #6b7280;
    }

    .badge-danger {
        background-color: #fee2e2;
        color: #991b1b;
    }

    /* Form Card */
    .form-card {
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 2rem;
    }

    .form-card-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
    }

    .form-card-title {
        font-size: 1rem;
        font-weight: 600;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-card-body {
        padding: 1.5rem;
    }

    .form-card-footer {
        padding: 1rem 1.5rem;
        background-color: #fafafa;
        border-top: 1px solid #e5e5e5;
    }

    /* Role Checkboxes */
    .role-checkbox-group {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .role-checkbox {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem;
        border: 1px solid #e5e5e5;
        transition: all 0.2s;
    }

    .role-checkbox:hover {
        background-color: #fafafa;
    }

    .role-checkbox input[type="checkbox"] {
        width: 18px;
        height: 18px;
        cursor: pointer;
    }

    .role-checkbox label {
        margin: 0;
        cursor: pointer;
        flex: 1;
        font-size: 0.9rem;
        font-weight: 500;
        color: #1a1a1a;
    }

    /* Form Elements */
    .form-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        border-color: #1a1a1a;
        box-shadow: none;
        outline: none;
    }

    textarea.form-control {
        min-height: 100px;
        resize: vertical;
    }

    /* Buttons */
    .btn-primary {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.65rem 1.25rem;
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
    }

    .btn-primary:hover {
        background-color: #4a4a4a;
        border-color: #4a4a4a;
        color: white;
    }

    .btn-success {
        background-color: #22c55e;
        border: 1px solid #22c55e;
        color: white;
        padding: 0.65rem 1.25rem;
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
    }

    .btn-success:hover {
        background-color: #16a34a;
        border-color: #16a34a;
        color: white;
    }

    .btn-danger {
        background-color: #dc2626;
        border: 1px solid #dc2626;
        color: white;
        padding: 0.65rem 1.25rem;
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
    }

    .btn-danger:hover {
        background-color: #b91c1c;
        border-color: #b91c1c;
        color: white;
    }

    .btn-warning {
        background-color: #f59e0b;
        border: 1px solid #f59e0b;
        color: white;
        padding: 0.65rem 1.25rem;
        font-size: 0.9rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
    }

    .btn-warning:hover {
        background-color: #d97706;
        border-color: #d97706;
        color: white;
    }

    /* Alert */
    .alert-box {
        background-color: #fef3c7;
        border-left: 3px solid #f59e0b;
        padding: 1rem 1.25rem;
        color: #92400e;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
    }

    .alert-info {
        background-color: #f0f9ff;
        border-left: 3px solid #0284c7;
        color: #075985;
    }

    /* Ban Status Card */
    .ban-status-card {
        background-color: #fee2e2;
        border: 1px solid #fecaca;
        padding: 1rem 1.25rem;
        margin-bottom: 1rem;
    }

    .ban-status-title {
        font-weight: 600;
        color: #991b1b;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .ban-status-text {
        color: #dc2626;
        font-size: 0.85rem;
    }

    /* Verification Actions */
    .verification-actions {
        display: flex;
        gap: 0.75rem;
        margin-top: 1rem;
    }

    .verification-actions input {
        flex: 1;
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.65rem 1rem;
        font-size: 0.85rem;
    }

    
</style>

<!-- Page Header -->
<div class="page-header">
    <h1 class="page-title">
        <i class="fas fa-user-circle me-2" style="color: #666;"></i>
        @Model.User.UserName
    </h1>
    <a asp-action="Index" class="back-btn">
        <i class="fas fa-arrow-left"></i>
        Geri Dön
    </a>
</div>

<div class="row">
    <!-- Left Column -->
    <div class="col-lg-5">
        <!-- User Information -->
        <div class="info-card">
            <div class="info-card-header">
                <h3 class="info-card-title">
                    <i class="fas fa-id-card" style="color: #666;"></i>
                    Kullanıcı Bilgileri
                </h3>
            </div>
            <div class="info-card-body">
                <ul class="info-list">
                    <li class="info-list-item">
                        <span class="info-label">Kullanıcı Adı:</span>
                        <span class="info-value">@Model.User.UserName</span>
                    </li>
                    <li class="info-list-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value">@Model.User.Email</span>
                    </li>
                    <li class="info-list-item">
                        <span class="info-label">Email Doğrulama:</span>
                        @if (Model.User.EmailConfirmed)
                        {
                            <span class="status-badge badge-success">Onaylı</span>
                        }
                        else
                        {
                            <span class="status-badge badge-warning">Onaysız</span>
                        }
                    </li>
                    <li class="info-list-item">
                        <span class="info-label">Telefon:</span>
                        <span class="info-value">@(Model.User.PhoneNumber ?? "-")</span>
                    </li>
                    <li class="info-list-item">
                        <span class="info-label">Kayıt Tarihi:</span>
                        <span class="info-value">@Model.User.RegisteredDate.ToString("dd.MM.yyyy HH:mm")</span>
                    </li>
                    <li class="info-list-item">
                        <span class="info-label">Hesap Durumu:</span>
                        @if (isBanned)
                        {
                            <span class="status-badge badge-danger">Banlı</span>
                        }
                        else
                        {
                            <span class="status-badge badge-success">Aktif</span>
                        }
                    </li>
                </ul>
            </div>
        </div>

        <!-- Profile Information -->
        <div class="info-card">
            <div class="info-card-header">
                <h3 class="info-card-title">
                    <i class="fas fa-user" style="color: #666;"></i>
                    Profil Bilgileri
                </h3>
            </div>
            <div class="info-card-body">
                @if (Model.Profile != null)
                {
                    <ul class="info-list">
                        
                        <li class="info-list-item">
                            <span class="info-label">Profil Doğrulama:</span>
                            @if (isVerified)
                            {
                                <span class="status-badge badge-success">Onaylı</span>
                            }
                            else if (canVerify)
                            {
                                <span class="status-badge badge-warning">Onay Bekliyor</span>
                            }
                            else
                            {
                                <span class="status-badge badge-secondary">Doğrulanmamış</span>
                            }
                        </li>
                    </ul>
                }
                else
                {
                    <div style="padding: 1.5rem; text-align: center;">
                        <i class="fas fa-user-slash" style="font-size: 2rem; color: #ccc; margin-bottom: 0.75rem;"></i>
                        <div class="alert-box">
                            Bu kullanıcı henüz profilini oluşturmamış.
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-7">
        <!-- Role Management -->
        <div class="form-card">
            <form asp-action="UpdateRoles" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="userId" value="@Model.User.Id" />
                
                <div class="form-card-header">
                    <h3 class="form-card-title" style="color: #0284c7;">
                        <i class="fas fa-user-tag"></i>
                        Rol Yönetimi
                    </h3>
                </div>
                
                <div class="form-card-body">
                    <label class="form-label">Kullanıcı Rolleri:</label>
                    <div class="role-checkbox-group">
                        @for (var i = 0; i < Model.AllRoles.Count; i++)
                        {
                            <div class="role-checkbox">
                                <input type="hidden" asp-for="AllRoles[i].RoleId" />
                                <input type="hidden" asp-for="AllRoles[i].RoleName" />
                                <input type="checkbox" asp-for="AllRoles[i].IsSelected" id="role_@i" />
                                <label asp-for="AllRoles[i].IsSelected" for="role_@i">
                                    @Model.AllRoles[i].RoleName
                                </label>
                            </div>
                        }
                    </div>
                </div>
                
                <div class="form-card-footer">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-save me-2"></i>Rolleri Güncelle
                    </button>
                </div>
            </form>
        </div>

        <!-- Ban Management -->
        <div class="form-card">
            <div class="form-card-header">
                <h3 class="form-card-title" style="color: #dc2626;">
                    <i class="fas fa-ban"></i>
                    Hesap Durumu (Ban)
                </h3>
            </div>
            
            @if (isBanned)
            {
                <form asp-action="UnbanUser" method="post" asp-route-userId="@Model.User.Id">
                    @Html.AntiForgeryToken()
                    <div class="form-card-body">
                        <div class="ban-status-card">
                            <div class="ban-status-title">
                                <i class="fas fa-exclamation-triangle me-2"></i>Kullanıcı Banlı
                            </div>
                            <div class="ban-status-text">
                                <strong>Ban Bitiş Tarihi:</strong> @Model.User.LockoutEnd.Value.ToString("dd.MM.yyyy HH:mm")
                            </div>
                        </div>
                        <div class="alert-box alert-info">
                            Banı kaldırmak için aşağıdaki butonu kullanabilirsiniz. Kullanıcı tekrar sisteme giriş yapabilecektir.
                        </div>
                    </div>
                    <div class="form-card-footer">
                        <button type="submit" class="btn-success">
                            <i class="fas fa-check-circle me-2"></i>Banı Kaldır
                        </button>
                    </div>
                </form>
            }
            else
            {
                <form asp-action="BanUser" method="post" asp-route-userId="@Model.User.Id">
                    @Html.AntiForgeryToken()
                    <div class="form-card-body">
                        <div class="alert-box">
                            <i class="fas fa-info-circle me-2"></i>
                            Kullanıcıyı banlamak hesabı kalıcı olarak kilitler ve giriş yapmasını engeller.
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Ban Sebebi (Zorunlu):</label>
                            <textarea name="banReason" class="form-control" rows="4" 
                                      placeholder="Ban sebebini detaylı olarak açıklayın..." required></textarea>
                        </div>
                    </div>
                    <div class="form-card-footer">
                        <button type="submit" class="btn-danger" 
                                onclick="return confirm('Bu kullanıcıyı banlamak istediğinize emin misiniz?')">
                            <i class="fas fa-gavel me-2"></i>Kullanıcıyı Banla
                        </button>
                    </div>
                </form>
            }
        </div>

        <!-- Identity Verification -->
        @if (canVerify)
        {
            <div class="form-card">
                <div class="form-card-header">
                    <h3 class="form-card-title" style="color: #f59e0b;">
                        <i class="fas fa-id-badge"></i>
                        Kimlik Doğrulama
                    </h3>
                </div>
                <div class="form-card-body">
                    <div class="alert-box">
                        <i class="fas fa-clock me-2"></i>
                        Kullanıcı kimlik doğrulaması için belge yüklemiş. Lütfen belgeleri inceleyin ve onaylayın veya reddedin.
                    </div>
                    
                    <div style="display: flex; gap: 0.75rem; margin-top: 1.5rem;">
                        <form asp-action="VerifyIdentity" method="post" asp-route-userId="@Model.User.Id" style="flex: 1;">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-success" style="width: 100%;">
                                <i class="fas fa-check me-2"></i>Kimliği Onayla
                            </button>
                        </form>

                        <button type="button" class="btn-warning" onclick="document.getElementById('rejectForm').style.display='block'">
                            <i class="fas fa-times me-2"></i>Kimliği Reddet
                        </button>
                    </div>

                    <form id="rejectForm" asp-action="RejectIdentity" method="post" asp-route-userId="@Model.User.Id" 
                          style="display: none; margin-top: 1rem;">
                        @Html.AntiForgeryToken()
                        <label class="form-label">Red Sebebi:</label>
                        <textarea name="rejectReason" class="form-control" rows="3" 
                                  placeholder="Red sebebini açıklayın..." required></textarea>
                        <button type="submit" class="btn-danger" style="margin-top: 0.75rem; width: 100%;">
                            <i class="fas fa-paper-plane me-2"></i>Red Sebebini Gönder
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div
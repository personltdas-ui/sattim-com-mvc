@model Sattim.Web.ViewModels.Dispute.OpenDisputeViewModel
@using Sattim.Web.Models.Dispute // DisputeReason enum'ı için

@{
    ViewData["Title"] = "Yeni İhtilaf Başvurusu";
}



@section Styles {
    <style>
        
        .breadcrumb-wrapper {
            margin-bottom: 2rem;
            margin-top: 2rem;
        }

        .breadcrumb-custom {
            background: transparent;
            padding: 0;
            margin: 0;
            font-size: 0.85rem;
            display: flex;
            flex-wrap: wrap;
            list-style: none;
            gap: 0.5rem;
        }

        .breadcrumb-item {
            display: flex;
            align-items: center;
        }

            .breadcrumb-item + .breadcrumb-item::before {
                content: '/';
                color: #ccc;
                padding-right: 0.5rem;
            }

            .breadcrumb-item a {
                color: #666;
                text-decoration: none;
                transition: color 0.2s;
            }

                .breadcrumb-item a:hover {
                    color: var(--primary-color);
                }

            .breadcrumb-item.active {
                color: var(--primary-color);
                font-weight: 500;
            }

        
        .form-card-wrapper {
            background: #fff;
            border: 1px solid var(--border-color);
            padding: 2.5rem; 
        }

        
        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--primary-color);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        
        .form-subtitle {
            font-size: 0.9rem;
            color: #666;
            line-height: 1.7;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 1.5rem;
            margin-bottom: 1.5rem;
        }

        
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-size: 0.8rem;
            font-weight: 600;
            color: #666;
            margin-bottom: 0.5rem;
            display: block;
        }

        .form-input {
            width: 100%;
            border: 1px solid var(--border-color);
            border-radius: 0;
            padding: 0.75rem 1rem;
            font-size: 0.9rem;
            transition: all 0.2s;
            background-color: #fff; 
        }
        
        select.form-input {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23333333' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M2 5l6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 0.75rem center;
            background-size: 16px 12px;
        }

        .form-input:focus {
            border-color: var(--primary-color);
            box-shadow: none;
            outline: none;
        }

       
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 0.75rem;
            margin-top: 2rem;
        }

        
        .btn-base-modern {
            padding: 0.75rem 1.5rem;
            font-size: 0.9rem;
            font-weight: 600;
            border-radius: 0;
            text-decoration: none;
            transition: all 0.2s;
            cursor: pointer;
        }

        .btn-outline-modern {
            background: white;
            border: 1px solid var(--border-color);
            color: #666;
        }

            .btn-outline-modern:hover {
                background: var(--bg-light);
                border-color: var(--primary-color);
                color: var(--primary-color);
            }

        .form-btn-danger {
            background-color: #dc2626;
            border: 1px solid #dc2626;
            color: white;
        }

            .form-btn-danger:hover {
                background-color: #b91c1c;
                border-color: #b91c1c;
            }
    </style>
}

<nav class="breadcrumb-wrapper" aria-label="breadcrumb">
    <ol class="breadcrumb-custom">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
        <li class="breadcrumb-item"><a asp-controller="Orders" asp-action="MyOrders">Siparişlerim</a></li>
        <li class="breadcrumb-item active" aria-current="page">Yeni İhtilaf</li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="form-card-wrapper">

            <h1 class="section-title">
                <i class="fa-solid fa-shield-halved"></i>
                @ViewData["Title"]
            </h1>

            <p class="form-subtitle">
                Siparişinizle ilgili bir sorun mu yaşadınız? Lütfen aşağıdaki formu doldurarak
                ihtilaf sürecini başlatın. Satıcı ve site yöneticileri bilgilendirilecektir.
                </Fp>

                <form asp-action="OpenDispute" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="border-radius: 0; font-size: 0.85rem;"></div>

                    <input type="hidden" asp-for="ProductId" />

                    <div class="form-group">
                        <label asp-for="Reason" class="form-label">İhtilaf Sebebi</label>
                        <select asp-for="Reason" asp-items="Html.GetEnumSelectList<DisputeReason>()"
                                class="form-input">
                            <option value="">Bir sebep seçiniz...</option>
                        </select>
                        <span asp-validation-for="Reason" class="text-danger" style="font-size: 0.8rem;"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Sorunun Açıklaması</label>
                        <textarea asp-for="Description" class="form-input" rows="6"
                                  placeholder="Lütfen yaşadığınız sorunu detaylıca anlatın. Bu, satıcıya ve yöneticilere göndereceğiniz ilk mesaj olacaktır."></textarea>
                        <span asp-validation-for="Description" class="text-danger" style="font-size: 0.8rem;"></span>
                    </div>

                    <div class="form-actions">
                        <a asp-controller="Orders" asp-action="MyOrders" class="btn-base-modern btn-outline-modern">Vazgeç</a>
                        <button type="submit" class="btn-base-modern form-btn-danger">İhtilaf Başvurusu Gönder</button>
                    </div>
                </form>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
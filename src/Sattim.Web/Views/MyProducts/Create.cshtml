@model Sattim.Web.ViewModels.Product.ProductFormViewModel
@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<style>
    .create-container {
        padding: 2rem 0;
    }

    .breadcrumb-custom {
        background: transparent;
        padding: 0 0 1rem 0;
        margin: 0;
        font-size: 0.85rem;
    }

        .breadcrumb-custom .breadcrumb-item a {
            color: #666;
            text-decoration: none;
            transition: color 0.2s;
        }

            .breadcrumb-custom .breadcrumb-item a:hover {
                color: #1a1a1a;
            }

    .page-header {
        margin-bottom: 2rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #e5e5e5;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0 0 0.75rem 0;
        letter-spacing: -0.5px;
    }

    .page-intro {
        color: #666;
        font-size: 0.95rem;
        line-height: 1.6;
        margin: 0;
    }

    .info-box {
        background-color: #f0f9ff;
        border-left: 3px solid #0284c7;
        padding: 1.25rem 1.5rem;
        margin-bottom: 2rem;
        font-size: 0.9rem;
        color: #075985;
        line-height: 1.6;
    }

    .info-box-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .info-box-title i {
            font-size: 1.1rem;
        }

    .info-box ul {
        margin: 0.75rem 0 0 1.25rem;
        padding: 0;
    }

    .info-box li {
        margin-bottom: 0.35rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        padding-top: 2rem;
        border-top: 1px solid #e5e5e5;
        margin-top: 2rem;
    }

    .btn-cancel {
        background-color: transparent;
        border: 1px solid #e5e5e5;
        color: #666;
        padding: 0.75rem 2rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-cancel:hover {
            background-color: #f5f5f5;
            border-color: #d5d5d5;
            color: #1a1a1a;
        }

    .btn-create {
        background-color: #22c55e;
        border: 1px solid #22c55e;
        color: white;
        padding: 0.75rem 2rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .btn-create:hover {
            background-color: #16a34a;
            border-color: #16a34a;
            color: white;
            transform: translateY(-1px);
        }

    .steps-indicator {
        background: white;
        border: 1px solid #e5e5e5;
        padding: 1.5rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .step {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        flex: 1;
        position: relative;
    }

        .step::after {
            content: '';
            position: absolute;
            right: -50%;
            top: 50%;
            transform: translateY(-50%);
            width: 100%;
            height: 2px;
            background-color: #e5e5e5;
            z-index: -1;
        }

        .step:last-child::after {
            display: none;
        }

    .step-number {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #f5f5f5;
        border: 2px solid #e5e5e5;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 0.95rem;
        color: #666;
        flex-shrink: 0;
    }

    .step.active .step-number {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
        color: white;
    }

    .step.completed .step-number {
        background-color: #22c55e;
        border-color: #22c55e;
        color: white;
    }

    .step-content {
        flex: 1;
    }

    .step-title {
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        margin: 0;
    }

    .step.active .step-title {
        color: #1a1a1a;
    }

    .step-desc {
        font-size: 0.75rem;
        color: #999;
        margin: 0;
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .form-actions

    {
        flex-direction: column;
    }

    .btn-cancel,
    .btn-create {
        width: 100%;
        justify-content: center;
    }

    .steps-indicator {
        flex-direction: column;
        gap: 1.5rem;
    }

    .step {
        width: 100%;
    }

        .step::after {
            display: none;
        }

    }

    @@media (max-width: 576px) {
        .page-title

    {
        font-size: 1.5rem;
    }

    }
</style>

<div class="create-container">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb breadcrumb-custom">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                        <li class="breadcrumb-item"><a asp-controller="MyProducts" asp-action="Index">Ürünlerim</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Yeni Ürün Ekle</li>
                    </ol>
                </nav>

                <!-- Page Header -->
                <div class="page-header">
                    <h1 class="page-title">Yeni Ürün Ekle</h1>
                    <p class="page-intro">
                        Ürününüzü açık artırmaya çıkarmak için gerekli bilgileri doldurun.
                        Ürün oluşturulduktan sonra resim ekleme adımına geçeceksiniz.
                    </p>
                </div>

                <!-- Steps Indicator -->
                <div class="steps-indicator">
                    <div class="step active">
                        <div class="step-number">1</div>
                        <div class="step-content">
                            <div class="step-title">Ürün Bilgileri</div>
                            <div class="step-desc">Başlık, açıklama ve fiyat</div>
                        </div>
                    </div>
                    <div class="step">
                        <div class="step-number">2</div>
                        <div class="step-content">
                            <div class="step-title">Resim Ekleme</div>
                            <div class="step-desc">Ürün fotoğrafları</div>
                        </div>
                    </div>
                    <div class="step">
                        <div class="step-number">3</div>
                        <div class="step-content">
                            <div class="step-title">Onaya Gönder</div>
                            <div class="step-desc">Yönetici onayı</div>
                        </div>
                    </div>
                </div>

                <!-- Info Box -->
                <div class="info-box">
                    <div class="info-box-title">
                        <i class="fas fa-info-circle"></i>
                        Önemli Bilgiler
                    </div>
                    <ul>
                        <li>Tüm bilgileri eksiksiz ve doğru doldurunuz</li>
                        <li>Ürün açıklaması detaylı ve net olmalıdır</li>
                        <li>Ürününüz yönetici onayından sonra yayına alınacaktır</li>
                        <li>Bir sonraki adımda ürün resimlerini ekleyebileceksiniz</li>
                    </ul>
                </div>

                <!-- Form -->
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    @await Html.PartialAsync("_ProductFormFields", Model)

                    <div class="form-actions">
                        <a asp-action="Index" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            Vazgeç
                        </a>
                        <button type="submit" class="btn-create">
                            <i class="fas fa-arrow-right"></i>
                            Oluştur ve Resim Ekle
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Form validation
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');

            form.addEventListener('submit', function(e) {
                const btn = form.querySelector('.btn-create');
                btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Oluşturuluyor...';
                btn.disabled = true;
            });
        });
    </script>
}
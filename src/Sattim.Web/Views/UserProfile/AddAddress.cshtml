@model Sattim.Web.ViewModels.Profile.AddressViewModel

@{
    ViewData["Title"] = "Yeni Adres Ekle";
}

<div class="container mt-4">
    <div class="row">

        <div class="col-md-3">
            @await Html.PartialAsync("_ProfileNav")
        </div>

        <div class="col-md-9">
            <h2>@ViewData["Title"]</h2>
            <hr />

            <div class="col-lg-8">
                <form asp-action="AddAddress" method="post">
                    @Html.AntiForgeryToken()

                    @await Html.PartialAsync("_AddressFormFields", Model)

                    <a asp-action="Addresses" class="btn btn-secondary">Vazgeç</a>
                    <button type="submit" class="btn btn-success">Adresi Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
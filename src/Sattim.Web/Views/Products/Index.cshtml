@model IEnumerable<Sattim.Web.ViewModels.Product.ProductSummaryViewModel>
@using Sattim.Web.ViewModels.Product
@{
    ViewData["Title"] = "Ürünler";
    var totalPages = (int)ViewBag.TotalPages;
    var currentFilter = (ProductFilterViewModel)ViewBag.CurrentFilter;
    int currentPage = currentFilter.Page;
    var totalProducts = (int?)ViewBag.TotalProducts ?? 0;
}

<style>
    .products-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .products-header {
        margin-bottom: 2rem;
    }

    .products-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0 0 0.5rem 0;
        letter-spacing: -0.5px;
    }

    .products-subtitle {
        color: #666;
        font-size: 0.9rem;
        margin: 0;
    }

    .products-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 2rem;
        align-items: start;
    }

    .filter-sidebar {
        position: sticky;
        top: 2rem;
        background: white;
        border: 1px solid #e5e5e5;
    }

    .filter-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        background-color: #fafafa;
    }

    .filter-title {
        font-size: 1rem;
        font-weight: 600;
        color: #1a1a1a;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .filter-body {
        padding: 1.5rem;
    }

    .filter-group {
        margin-bottom: 1.5rem;
    }

        .filter-group:last-child {
            margin-bottom: 0;
        }

    .filter-label {
        font-size: 0.85rem;
        font-weight: 600;
        color: #666;
        margin-bottom: 0.5rem;
        display: block;
    }

    .filter-input,
    .filter-select {
        width: 100%;
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
        color: #1a1a1a;
        background-color: white;
        transition: all 0.2s;
    }

        .filter-input:focus,
        .filter-select:focus {
            border-color: #1a1a1a;
            box-shadow: none;
            outline: none;
        }

        .filter-input::placeholder {
            color: #999;
        }

    .price-range-inputs {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
    }

    .filter-actions {
        display: flex;
        gap: 0.75rem;
        padding-top: 1rem;
        border-top: 1px solid #e5e5e5;
        margin-top: 1rem;
    }

    .btn-filter {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.75rem 1.25rem;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 0;
        transition: all 0.2s;
        flex: 1;
        cursor: pointer;
    }

        .btn-filter:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .btn-clear {
        background-color: white;
        border: 1px solid #e5e5e5;
        color: #666;
        padding: 0.75rem 1.25rem;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        text-decoration: none;
        text-align: center;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

        .btn-clear:hover {
            background-color: #fafafa;
            border-color: #1a1a1a;
            color: #1a1a1a;
        }

    .products-content {
        min-height: 400px;
    }

    .results-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 1.5rem;
        background: white;
        border: 1px solid #e5e5e5;
        margin-bottom: 1.5rem;
    }

    .results-count {
        font-size: 0.9rem;
        color: #666;
    }

        .results-count strong {
            color: #1a1a1a;
            font-weight: 600;
        }

    .mobile-filter-toggle {
        display: none;
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.75rem 1.25rem;
        font-size: 0.85rem;
        font-weight: 600;
        border-radius: 0;
        cursor: pointer;
        align-items: center;
        gap: 0.5rem;
    }

    .products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border: 1px solid #e5e5e5;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.3;
            color: #666;
        }

    .empty-state-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
    }

    .empty-state-text {
        font-size: 0.9rem;
        color: #666;
        margin-bottom: 1.5rem;
    }

    .pagination-wrapper {
        margin-top: 2rem;
        display: flex;
        justify-content: center;
    }

    .pagination {
        display: flex;
        gap: 0.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .page-item {
        margin: 0;
    }

    .page-link {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 40px;
        height: 40px;
        padding: 0 0.75rem;
        border: 1px solid #e5e5e5;
        background-color: white;
        color: #666;
        text-decoration: none;
        font-size: 0.85rem;
        font-weight: 500;
        transition: all 0.2s;
    }

        .page-link:hover {
            background-color: #fafafa;
            border-color: #1a1a1a;
            color: #1a1a1a;
        }

    .page-item.active .page-link {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
        color: white;
    }

    .page-item.disabled .page-link {
        opacity: 0.5;
        cursor: not-allowed;
        pointer-events: none;
    }

    .filter-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
        display: none;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

        .filter-overlay.show {
            display: block;
            opacity: 1;
        }

    .filter-sidebar-mobile {
        position: fixed;
        top: 0;
        left: 0;
        width: 320px;
        max-width: 85vw;
        height: 100vh;
        background: white;
        z-index: 1001;
        transform: translateX(-100%);
        transition: transform 0.3s ease;
        overflow-y: auto;
    }

        .filter-sidebar-mobile.show {
            transform: translateX(0);
        }

    .filter-mobile-header {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e5e5;
        background-color: #fafafa;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .filter-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: #666;
        cursor: pointer;
        padding: 0;
        width: 30px;
        height: 30px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .filter-close:hover {
            color: #1a1a1a;
        }

    @@media (max-width: 991px) {
        .products-layout {
            grid-template-columns: 1fr;
        }

        .filter-sidebar {
            display: none;
        }

        .mobile-filter-toggle {
            display: flex;
        }

        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        }
    }

    @@media (max-width: 768px) {
        .products-container {
            padding: 1.5rem 1rem;
        }

        .products-title {
            font-size: 1.5rem;
        }

        .results-bar {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }

        .mobile-filter-toggle {
            width: 100%;
            justify-content: center;
        }

        .products-grid {
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 1rem;
        }
    }

    @@media (max-width: 480px) {
        .products-grid {
            grid-template-columns: 1fr;
        }

        .pagination {
            flex-wrap: wrap;
        }

        .page-link {
            min-width: 36px;
            height: 36px;
            font-size: 0.8rem;
        }
    }
</style>

<div class="products-container">
    <div class="products-header">
        <h1 class="products-title">@ViewData["Title"]</h1>
        <p class="products-subtitle">
            @if (!string.IsNullOrEmpty(currentFilter.Query))
            {
                <text>"@currentFilter.Query" için sonuçlar</text>
            }
            else if (currentFilter.CategoryId.HasValue)
            {
                <text>Kategori içindeki ürünler</text>
            }
            else
            {
                <text>Tüm ürünleri keşfedin</text>
            }
        </p>
    </div>

    <div class="products-layout">
        <aside class="filter-sidebar">
            <div class="filter-header">
                <h3 class="filter-title">
                    <i class="fas fa-filter"></i>
                    Filtrele
                </h3>
            </div>
            <div class="filter-body">
                <form asp-action="Index" method="get">
                    <input type="hidden" asp-for="@currentFilter.Query" />
                    <input type="hidden" asp-for="@currentFilter.CategoryId" />

                    <div class="filter-group">
                        <label class="filter-label">Sıralama</label>
                        <select asp-for="@currentFilter.SortBy"
                                asp-items="Html.GetEnumSelectList<ProductSortOrder>()"
                                class="filter-select">
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">Fiyat Aralığı</label>
                        <div class="price-range-inputs">
                            <input asp-for="@currentFilter.MinPrice"
                                   type="number"
                                   class="filter-input"
                                   placeholder="Min" />
                            <input asp-for="@currentFilter.MaxPrice"
                                   type="number"
                                   class="filter-input"
                                   placeholder="Max" />
                        </div>
                    </div>

                    <div class="filter-actions">
                        <input type="hidden" name="Page" value="1" />
                        <button type="submit" class="btn-filter">
                            <i class="fas fa-check"></i> Uygula
                        </button>
                        <a asp-action="Index" class="btn-clear">
                            Temizle
                        </a>
                    </div>
                </form>
            </div>
        </aside>

        <div class="products-content">
            <div class="results-bar">
                <div class="results-count">
                    <strong>@totalProducts</strong> ürün bulundu
                </div>
                <button class="mobile-filter-toggle" onclick="toggleMobileFilter()">
                    <i class="fas fa-filter"></i>
                    Filtrele
                </button>
            </div>

            @if (!Model.Any())
            {
                <div class="empty-state">
                    <i class="fas fa-shopping-bag"></i>
                    <div class="empty-state-title">Ürün Bulunamadı</div>
                    <div class="empty-state-text">
                        Bu kriterlere uygun ürün bulunamadı. Lütfen filtrelerinizi değiştirerek tekrar deneyin.
                    </div>
                    <a asp-action="Index" class="btn-filter">
                        Tüm Ürünleri Görüntüle
                    </a>
                </div>
            }
            else
            {
                <div class="products-grid">
                    @foreach (var product in Model)
                    {
                        @await Html.PartialAsync("_ProductCard", product)
                    }
                </div>

                @if (totalPages > 1)
                {
                    <nav class="pagination-wrapper" aria-label="Sayfa navigasyonu">
                        <ul class="pagination">
                            <li class="page-item @(currentPage <= 1 ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-Query="@currentFilter.Query"
                                   asp-route-CategoryId="@currentFilter.CategoryId"
                                   asp-route-MinPrice="@currentFilter.MinPrice"
                                   asp-route-MaxPrice="@currentFilter.MaxPrice"
                                   asp-route-SortBy="@currentFilter.SortBy"
                                   asp-route-Page="@(currentPage - 1)">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            </li>

                            @{
                                int startPage = Math.Max(1, currentPage - 2);
                                int endPage = Math.Min(totalPages, currentPage + 2);
                            }

                            @if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-Query="@currentFilter.Query"
                                       asp-route-CategoryId="@currentFilter.CategoryId"
                                       asp-route-MinPrice="@currentFilter.MinPrice"
                                       asp-route-MaxPrice="@currentFilter.MaxPrice"
                                       asp-route-SortBy="@currentFilter.SortBy"
                                       asp-route-Page="1">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }

                            @for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-Query="@currentFilter.Query"
                                       asp-route-CategoryId="@currentFilter.CategoryId"
                                       asp-route-MinPrice="@currentFilter.MinPrice"
                                       asp-route-MaxPrice="@currentFilter.MaxPrice"
                                       asp-route-SortBy="@currentFilter.SortBy"
                                       asp-route-Page="@i">@i</a>
                                </li>
                            }

                            @if (endPage < totalPages)
                            {
                                @if (endPage < totalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-Query="@currentFilter.Query"
                                       asp-route-CategoryId="@currentFilter.CategoryId"
                                       asp-route-MinPrice="@currentFilter.MinPrice"
                                       asp-route-MaxPrice="@currentFilter.MaxPrice"
                                       asp-route-SortBy="@currentFilter.SortBy"
                                       asp-route-Page="@totalPages">@totalPages</a>
                                </li>
                            }

                            <li class="page-item @(currentPage >= totalPages ? "disabled" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-Query="@currentFilter.Query"
                                   asp-route-CategoryId="@currentFilter.CategoryId"
                                   asp-route-MinPrice="@currentFilter.MinPrice"
                                   asp-route-MaxPrice="@currentFilter.MaxPrice"
                                   asp-route-SortBy="@currentFilter.SortBy"
                                   asp-route-Page="@(currentPage + 1)">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

<div class="filter-overlay" id="filterOverlay" onclick="toggleMobileFilter()"></div>
<aside class="filter-sidebar-mobile" id="filterSidebarMobile">
    <div class="filter-mobile-header">
        <h3 class="filter-title">
            <i class="fas fa-filter"></i>
            Filtrele
        </h3>
        <button class="filter-close" onclick="toggleMobileFilter()" aria-label="Kapat">
            <span>×</span>
        </button>
    </div>
    <div class="filter-body">
        <form asp-action="Index" method="get">
            <input type="hidden" asp-for="@currentFilter.Query" />
            <input type="hidden" asp-for="@currentFilter.CategoryId" />

            <div class="filter-group">
                <label class="filter-label">Sıralama</label>
                <select asp-for="@currentFilter.SortBy"
                        asp-items="Html.GetEnumSelectList<ProductSortOrder>()"
                        class="filter-select">
                </select>
            </div>

            <div class="filter-group">
                <label class="filter-label">Fiyat Aralığı</label>
                <div class="price-range-inputs">
                    <input asp-for="@currentFilter.MinPrice"
                           type="number"
                           class="filter-input"
                           placeholder="Min" />
                    <input asp-for="@currentFilter.MaxPrice"
                           type="number"
                           class="filter-input"
                           placeholder="Max" />
                </div>
            </div>

            <div class="filter-actions">
                <input type="hidden" name="Page" value="1" />
                <button type="submit" class="btn-filter">
                    <i class="fas fa-check"></i> Uygula
                </button>
                <a asp-action="Index" class="btn-clear">
                    Temizle
                </a>
            </div>
        </form>
    </div>
</aside>

@section Scripts {
    <script>
        function toggleMobileFilter() {
            const overlay = document.getElementById('filterOverlay');
            const sidebar = document.getElementById('filterSidebarMobile');

            overlay.classList.toggle('show');
            sidebar.classList.toggle('show');

            document.body.style.overflow = sidebar.classList.contains('show') ? 'hidden' : '';
        }

        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                const sidebar = document.getElementById('filterSidebarMobile');
                if (sidebar.classList.contains('show')) {
                    toggleMobileFilter();
                }
            }
        });
    </script>
}
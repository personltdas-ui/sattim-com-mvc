<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sattim.Web</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body style="background-color: #f8f9fa;">
    @* Hafif gri bir arka plan *@

    <header class="py-3 mb-4 border-bottom bg-white shadow-sm">
        <div class="container text-center">
            <span class="fs-4">Sattim.Web - Güvenli Ödeme</span>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5" style="background-color: #fff;">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Sattim.Web - Güvenli Alışveriş
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@* Controller'dan gelen LoginViewModel'i model olarak alır *@
@model Sattim.Web.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    .login-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        padding: 2rem 0;
    }

    .login-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        padding: 3rem 2.5rem;
        max-width: 450px;
        margin: 0 auto;
    }

    .login-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .login-subtitle {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 2rem;
    }

    .form-control {
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #1a1a1a;
            box-shadow: none;
            outline: none;
        }

    .form-label {
        color: #666;
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn-login {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.75rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        width: 100%;
    }

        .btn-login:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .form-check-input:checked {
        background-color: #1a1a1a;
        border-color: #1a1a1a;
    }

    .form-check-input:focus {
        box-shadow: none;
        border-color: #666;
    }

    .login-link {
        color: #1a1a1a;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }

        .login-link:hover {
            color: #666;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 2rem 0;
        color: #999;
        font-size: 0.85rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e5e5e5;
        }

        .divider span {
            padding: 0 1rem;
        }

    .info-section {
        background-color: #fafafa;
        border-left: 1px solid #e5e5e5;
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .info-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 1rem;
    }

    .info-text {
        color: #666;
        line-height: 1.7;
        margin-bottom: 1.5rem;
    }

    .feature-item {
        display: flex;
        align-items: start;
        margin-bottom: 1.25rem;
        gap: 0.75rem;
    }

    .feature-icon {
        width: 24px;
        height: 24px;
        background-color: #1a1a1a;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        flex-shrink: 0;
        margin-top: 2px;
    }

    .feature-text {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    
</style>

<div class="login-container">
    <div class="container">
        <div class="row g-0">
            <!-- Login Form -->
            <div class="col-md-6">
                <div class="login-card">
                    <h1 class="login-title">Hoş Geldiniz</h1>
                    <p class="login-subtitle">Hesabınıza giriş yapın</p>

                    <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">E-posta Adresi</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ornek@mail.com" autocomplete="username" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                <label asp-for="RememberMe" class="form-check-label" style="font-size: 0.9rem; color: #666;">
                                    Beni Hatırla
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="login-link" style="font-size: 0.9rem;">Şifremi unuttum</a>
                        </div>

                        <button class="btn-login" type="submit">Giriş Yap</button>

                        <div class="divider">
                            <span>veya</span>
                        </div>

                        <p class="text-center" style="color: #666; font-size: 0.9rem;">
                            Hesabınız yok mu?
                            <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" class="login-link">Hemen Kayıt Olun</a>
                        </p>
                    </form>
                </div>
            </div>

            <!-- Info Section -->
            <div class="col-md-6">
                <div class="info-section">
                    <div class="info-title">Neden Sattim.com?</div>
                    <p class="info-text">
                        Türkiye'nin en güvenilir online açık artırma platformunda binlerce ürüne erişin ve avantajlı fiyatlarla alışveriş yapın.
                    </p>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="feature-text">
                            <strong>Güvenli Alışveriş</strong><br>
                            256-bit SSL sertifikası ile korunan ödeme sistemi
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fas fa-gavel"></i>
                        </div>
                        <div class="feature-text">
                            <strong>Binlerce Ürün</strong><br>
                            Her kategoriden ürünlere anlık erişim ve teklif verme
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fas fa-truck"></i>
                        </div>
                        <div class="feature-text">
                            <strong>Hızlı Teslimat</strong><br>
                            Kazandığınız ürünler 3 iş günü içinde kapınızda
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="fas fa-headset"></i>
                        </div>
                        <div class="feature-text">
                            <strong>7/24 Destek</strong><br>
                            Müşteri hizmetleri ekibimiz her zaman yanınızda
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Sattim.Web.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<style>
    .forgot-container {
        min-height: calc(100vh - 200px);
        display: flex;
        align-items: center;
        padding: 2rem 0;
    }

    .forgot-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        padding: 3rem 2.5rem;
        max-width: 500px;
        margin: 0 auto;
    }

    .forgot-icon {
        width: 64px;
        height: 64px;
        background-color: #f5f5f5;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 1.5rem;
        color: #1a1a1a;
    }

    .forgot-title {
        font-size: 1.75rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 1rem;
        letter-spacing: -0.5px;
        text-align: center;
    }

    .forgot-subtitle {
        color: #666;
        font-size: 0.9rem;
        line-height: 1.6;
        text-align: center;
        margin-bottom: 2rem;
    }

    .form-control {
        border: 1px solid #e5e5e5;
        border-radius: 0;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #1a1a1a;
            box-shadow: none;
            outline: none;
        }

    .form-label {
        color: #666;
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .btn-forgot {
        background-color: #1a1a1a;
        border: 1px solid #1a1a1a;
        color: white;
        padding: 0.75rem;
        font-size: 0.95rem;
        font-weight: 500;
        border-radius: 0;
        transition: all 0.2s;
        width: 100%;
    }

        .btn-forgot:hover {
            background-color: #4a4a4a;
            border-color: #4a4a4a;
            color: white;
        }

    .forgot-link {
        color: #1a1a1a;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s;
    }

        .forgot-link:hover {
            color: #666;
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 2rem 0;
        color: #999;
        font-size: 0.85rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #e5e5e5;
        }

        .divider span {
            padding: 0 1rem;
        }

    .help-text {
        background-color: #f9fafb;
        border-left: 3px solid #1a1a1a;
        padding: 1rem 1.25rem;
        margin-top: 2rem;
        font-size: 0.85rem;
        color: #666;
        line-height: 1.6;
    }

        .help-text strong {
            color: #1a1a1a;
            display: block;
            margin-bottom: 0.5rem;
        }

   
</style>

<div class="forgot-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="forgot-card">
                    <div class="forgot-icon">
                        <i class="fas fa-lock"></i>
                    </div>

                    <h1 class="forgot-title">Şifrenizi mi Unuttunuz?</h1>
                    <p class="forgot-subtitle">
                        Endişelenmeyin! E-posta adresinizi girin, size şifrenizi sıfırlamanız için güvenli bir bağlantı gönderelim.
                    </p>

                    <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">E-posta Adresi</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="ornek@mail.com" autocomplete="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button class="btn-forgot" type="submit">
                            <i class="fas fa-paper-plane me-2"></i>Şifre Sıfırlama Bağlantısı Gönder
                        </button>

                        <div class="divider">
                            <span>veya</span>
                        </div>

                        <p class="text-center" style="color: #666; font-size: 0.9rem;">
                            Şifrenizi hatırladınız mı?
                            <a asp-action="Login" class="forgot-link">Giriş Yapın</a>
                        </p>
                    </form>

                    <div class="help-text">
                        <strong><i class="fas fa-info-circle me-1"></i> Yardım</strong>
                        E-posta gelmezse spam/gereksiz klasörünüzü kontrol edin. Sorun devam ederse müşteri hizmetlerimizle iletişime geçebilirsiniz.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}